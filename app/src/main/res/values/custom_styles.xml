<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.GoPaddi.Button.Main" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/margin_20</item>
        <item name="android:layout_marginBottom">@dimen/margin_10</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="android:paddingStart">@dimen/padding_5</item>
        <item name="android:paddingEnd">@dimen/padding_5</item>
    </style>

    <style name="Widget.GoPaddi.EditText.Email" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColorHint">@color/text_color_grey</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:paddingStart">@dimen/padding_5</item>
        <item name="android:paddingTop">@dimen/padding_12</item>
        <item name="android:paddingBottom">@dimen/padding_12</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Widget.GoPaddi.EditText.Text" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColorHint">@color/text_color_grey</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:paddingStart">@dimen/padding_5</item>
        <item name="android:paddingTop">@dimen/padding_12</item>
        <item name="android:paddingBottom">@dimen/padding_12</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">textMultiLine</item>
    </style>


</resources>